{
  "name": "vineverse-js",
  "version": "1.0.0",
  "description": "Multiplayer economic simulation game",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "test": "ava",
    "build": "mkdir -p dist && npm run build:client && npm run build:server && npm run build:assets",
    "build:client": "webpack && cp -fv src/client/index.html dist/assets/index.html",
    "build:server": "babel src/server --out-dir dist/server",
    "build:assets": "cp -fvr src/assets dist/assets",
    "watch": "watch 'npm run build:client' src/client",
    "start": "node dist/server"
  },
  "keywords": [
    "game",
    "simulation",
    "economic"
  ],
  "author": "Karol Baczewski <braxnu@gmail.com>",
  "license": "UNLICENSED",
  "dependencies": {
    "express": "^4.15.4"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "d3": "^4.10.2",
    "standard": "^10.0.3",
    "topojson": "^3.0.2",
    "watch": "^1.0.2",
    "webpack": "^3.5.6"
  }
}
